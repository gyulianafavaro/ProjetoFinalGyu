@model Projeto_Login.Models.Estado

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastre um Estado</h1>
<hr />
<div class="caixa">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstadoNome" class="control-label"></label>
                <input asp-for="EstadoNome" class="form-control" />
                <span asp-validation-for="EstadoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisId" class="control-label"></label>
                <select asp-for="PaisId" class ="form-control" asp-items="ViewBag.PaisId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
